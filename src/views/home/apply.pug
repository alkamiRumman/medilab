        link(href='/css/colors/purple-dark.css', rel='stylesheet')
        link(href='/css/common.css', rel='stylesheet')
        link(href='/css/login.css', rel='stylesheet')
        script(src='/plugins/jquery/jquery.js')
        script.
            var notifications = !{JSON.stringify(notifications)};
    body
        .wrapper
            .container
                h1.text-white.font-weight-bold Medilab+ Clinic
                form#applyForm.form-horizontal.form-material.bg-light.shadow.p-md-5.p-4.mx-3.mx-md-auto(action='/apply', novalidate='', method='post', accept-charset='utf-8' )
                    h3.box-title.m-b-15 Sign Up
                    .form-group
                        .col-6
                            input.form-control(type='text' placeholder='Enter Name' required name='name')
                    .form-group
                        .col-6
                            input.form-control.checkUserAllEmail(placeholder='Enter Email' name='email' type='email' required data-rule-checkUserEmailAvailability='all')
                    .form-group
                        .col-6
                            input.form-control(type='password' placeholder='Password' name='password' required minlength='4')
                    .form-group
                        .col-6.text-center
                            select#designation.form-control(name='designation')
                                option(value='doctor') Doctor
                                option(value='receptionist') Receptionist
                                option(value='laboratorist') Laboratorist
                                option(value='pharmacist') Pharmacist
                    .form-group.text-center.m-t-20
                        .col-xs-12
                            button.btn.btn-lg.btn-block.text-uppercase.waves-effect.waves-light.loginBtn(type='submit' )
                                b Apply
                    .form-group.m-b-0
                        .col-sm-12.text-center.text-dark
                            | Already have an account?
                            a.text-info.m-l-5(href='/login')
                                b Log In
            ul.bg-bubbles
                li
